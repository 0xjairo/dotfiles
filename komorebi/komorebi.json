{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.29/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/dotfiles/komorebi/applications.yaml",
  "animation": {
    "style": "Linear",
    "fps": 60,
    "enabled": false,
    "duration": 150
  },
  "border": true,
  "border_colours": {
    "stack": "#ff00ff",
    "single": "#00aa00",
    "monocle": "#aa55ff",
    "unfocused": "#000000"
  },
  "border_implementation": "Komorebi",
  "border_offset": -1,
  "border_style": "System",
  "border_width": 6,
  "cross_monitor_move_behaviour": "Insert",
  "default_container_padding": 0,
  "default_workspace_padding": 0,
  "mouse_follows_focus": true,
  "stackbar": {
    "height": 0,
    "label": "Process",
    "tabs": {
      "background": "#ffffff",
      "focused_text": "#ffffff",
      "width": 0,
      "font_family": "Segoe UI",
      "font_size": 0,
      "unfocused_text": "#ffffff"
    },
    "mode": "Never"
  },
  "transparency": false,
  "window_hiding_behaviour": "Cloak",
  "monitors": [
    {
      "workspaces": [
        {
          "name": "I",
          "layout": "VerticalStack"
        },
        {
          "name": "II",
          "layout": "VerticalStack"
        },
        {
          "name": "III",
          "layout": "VerticalStack"
        },
        {
          "name": "IV",
          "layout": "VerticalStack"
        },
        {
          "name": "V",
          "layout": "VerticalStack"
        },
        {
          "name": "VI",
          "layout": "VerticalStack"
        },
        {
          "name": "VII",
          "layout": "VerticalStack"
        },
        {
          "name": "VIII",
          "layout": "VerticalStack"
        },
        {
          "name": "IX",
          "layout": "VerticalStack"
        },
        {
          "name": "X",
          "layout": "VerticalStack"
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "1",
          "layout": "VerticalStack"
        },
        {
          "name": "2",
          "layout": "VerticalStack"
        },
        {
          "name": "3",
          "layout": "VerticalStack"
        },
        {
          "name": "4",
          "layout": "VerticalStack"
        },
        {
          "name": "4",
          "layout": "VerticalStack"
        },
        {
          "name": "5",
