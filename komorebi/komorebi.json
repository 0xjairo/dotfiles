{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.35/schema.json",
  "app_specific_configuration_path": [
    "$Env:USERPROFILE/dotfiles/komorebi/applications.json",
    "$Env:USERPROFILE/dotfiles/komorebi/my_applications.json"
  ],
  "animation": {
    "style": "Linear",
    "fps": 60,
    "enabled": false,
    "duration": 150
  },
  "border": true,
  "border_colours": {
    "stack": "#ff00ff",
    "single": "#00aa00",
    "monocle": "#aa55ff",
    "unfocused": "#000000"
  },
  "border_implementation": "Komorebi",
  "border_offset": 0,
  "border_style": "System",
  "border_width": 2,
  "cross_monitor_move_behaviour": "Insert",
  "default_container_padding": 0,
  "default_workspace_padding": 0,
  "mouse_follows_focus": true,
  "stackbar": {
    "height": 0,
    "label": "Process",
    "tabs": {
      "background": "#ffffff",
      "focused_text": "#ffffff",
      "width": 0,
      "font_family": "Segoe UI",
      "font_size": 0,
      "unfocused_text": "#ffffff"
    },
    "mode": "Never"
  },
  "transparency": false,
  "floating_applications": [
    {
      "kind": "Title",
      "id": "Reminders",
      "matching_strategy": "StartsWith"
    }
  ],
  "window_hiding_behaviour": "Cloak",
  "monitors": [
    {
      "workspaces": [
        {
          "name": "I",
          "layout": "VerticalStack",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "wezterm-gui.exe",
              "matching_strategy": "Equals"
            }
          ]
        },
        {
          "name": "II",
          "layout": "VerticalStack",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "firefox.exe",
              "matching_strategy": "Equals"
            }
          ]
        },
        {
          "name": "III",
          "layout": "VerticalStack",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "Signal.exe",
              "matching_strategy": "Equals"
            },
            {
              "kind": "Exe",
              "id": "slack.exe",
              "matching_strategy": "Equals"
            },
            {
              "kind": "Exe",
              "id": "Obsidian.exe",
              "matching_strategy": "Equals"
            }
          ]
        },
        {
          "name": "IV",
          "layout": "VerticalStack",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "olk.exe",
              "matching_strategy": "Equals"
            }
          ]
        },
        {
          "name": "V",
          "layout": "VerticalStack"
        },
        {
          "name": "VI",
          "layout": "VerticalStack"
        },
        {
          "name": "VII",
          "layout": "VerticalStack"
        },
        {
          "name": "VIII",
          "layout": "VerticalStack"
        },
        {
          "name": "IX",
          "layout": "VerticalStack"
        },
        {
          "name": "X",
          "layout": "VerticalStack",
          "initial_workspace_rules": [
            {
              "kind": "Class",
              "id": "OlkWV2Frame",
              "matching_strategy": "Equals"
            }
          ]
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "1",
          "layout": "Rows"
        },
        {
          "name": "2",
          "layout": "HorizontalStack"
        },
        {
          "name": "3",
          "layout": "HorizontalStack"
        },
        {
          "name": "4",
          "layout": "HorizontalStack"
        },
        {
          "name": "4",
          "layout": "HorizontalStack"
        },
        {
          "name": "5",
          "layout": "HorizontalStack"
        },
        {
          "name": "6",
          "layout": "HorizontalStack"
        },
        {
          "name": "7",
          "layout": "HorizontalStack"
        },
        {
          "name": "8",
          "layout": "HorizontalStack"
        },
        {
          "name": "9",
          "layout": "HorizontalStack"
        },
        {
          "name": "10",
          "layout": "HorizontalStack"
        }
      ]
    }
  ]
}
